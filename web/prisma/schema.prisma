generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

model Student {
  id            String             @id @default(cuid())
  name          String
  email         String             @unique
  grade         String
  status        StudentStatus      @default(ACTIVE)
  avatar        String?
  classId       String?
  class         SchoolClass?       @relation(fields: [classId], references: [id])
  attendance    AttendanceRecord[]
  examResults   ExamResult[]
  feeRecords    FeeRecord[]
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

enum StudentStatus {
  ACTIVE
  ABSENT
  SUSPENDED
}

model Teacher {
  id        String        @id @default(cuid())
  name      String
  email     String        @unique
  subject   String
  avatar    String?
  classes   SchoolClass[]
  events    ScheduleEvent[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model SchoolClass {
  id        String    @id @default(cuid())
  name      String    // e.g. "10th - A"
  grade     String
  teacherId String?
  teacher   Teacher?  @relation(fields: [teacherId], references: [id])
  students  Student[]
  exams     Exam[]
  time      String?
  days      String[]
  room      String?
  color     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model AttendanceRecord {
  id        String           @id @default(cuid())
  studentId String
  student   Student          @relation(fields: [studentId], references: [id])
  date      DateTime         @default(now())
  status    AttendanceStatus
  remarks   String?
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

model ScheduleEvent {
  id        String   @id @default(cuid())
  title     String   // subject or event name
  day       String
  startTime String
  endTime   String?
  teacherId String?
  teacher   Teacher? @relation(fields: [teacherId], references: [id])
  room      String?
  color     String?
}

model Exam {
  id          String       @id @default(cuid())
  title       String
  classId     String
  class       SchoolClass  @relation(fields: [classId], references: [id])
  subject     String
  date        DateTime
  totalMarks  Int
  results     ExamResult[]
}

model ExamResult {
  id            String   @id @default(cuid())
  examId        String
  exam          Exam     @relation(fields: [examId], references: [id])
  studentId     String
  student       Student  @relation(fields: [studentId], references: [id])
  marksObtained Int
  grade         String
  remarks       String?
}

model FeeRecord {
  id           String               @id @default(cuid())
  studentId    String
  student      Student              @relation(fields: [studentId], references: [id])
  type         String               // "Tuition", "Transport"
  amount       Float
  dueDate      DateTime
  status       FeeStatus
  transactions PaymentTransaction[]
}

enum FeeStatus {
  PAID
  PENDING
  OVERDUE
}

model PaymentTransaction {
  id          String   @id @default(cuid())
  feeId       String
  feeRecord   FeeRecord @relation(fields: [feeId], references: [id])
  amountPaid  Float
  date        DateTime @default(now())
  method      String   // Cash, Card, Online
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  type      String   // info, warning, success
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(cuid())
  senderId  String   // userId
  receiverId String  // userId
  content   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

